<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarADHDApp.Services.HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" x:Name="Tblogout" Clicked="Tblogout_OnClicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Välkommen!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Lägg till aktivitet" BackgroundColor="LightCoral" TextColor="Black" x:Name="BtnAddActivity" Clicked="BtnAddActivity_OnClicked" /> 
            <Button Text="Sök Aktivitet" BackgroundColor="LightCoral" TextColor="Black" x:Name="BtnSearchActivity" Clicked="BtnSearchActivity_OnClicked" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>