<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarADHDApp.Pages.NyAktivitet">
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <Label x:Name="AddNewActivityLabel" Text="Lägg till ny aktivitet"
                VerticalOptions="Start"  HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="ActivityNameLabel" Text="Namn på ny aktivitet"
                   HorizontalOptions="CenterAndExpand"/>
            <Button x:Name="OkButton" Text="OK"
                    HorizontalOptions="CenterAndExpand" Clicked="BtnOk_OnClicked"/>
            <Entry x:Name="ActivityNameEntry" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>