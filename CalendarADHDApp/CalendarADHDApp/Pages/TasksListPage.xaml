<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarADHDApp.Pages.TasksListPage">
    <ContentPage.Content>
        <ListView Margin="5" x:Name="LvTasks" HasUnevenRows="true" ItemSelected="LvTasks_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25" />
                                    <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="1" Margin="5,5,0,0">
                                <Label Text="{Binding TitleWorkTask}" VerticalOptions="Center" FontSize="16" TextColor="Black" />
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>