<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarADHDApp.Pages.RegisterWorkTaskPage">
    <ContentPage.Content>
        <StackLayout Margin="40">
            <Label Text="Registrera aktivitet"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium" Margin="0,0,0,40"/>
            <Entry Placeholder="Titel" x:Name="EntTitle"/>
            <Button Text="OK" x:Name="OkButton" Clicked="OkButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>